</head>

<body>
    <%- include('_navbar') %>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <img src="<%= dataPostView[0].imgUrl %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p>
                            #<%= dataPostView[0].TagId %> â™¥ <%= dataLike.length %>
                        </p>
                        <h3 class="card-title">
                            <%= dataPostView[0].title %>
                        </h3>
                        <h6 class="card-text">
                            <%= dataPostView[0].content %>
                        </h6>
                        <!-- <button type="button" class="btn btn-primary">Like this post</button> -->
                        <% if(hasLike(dataLike, UserId)==false) { %>
                            <a class="btn btn-primary"
                                href="/user/like/<%= dataPostView[0].id %>/<%= dataPostView[0].TagId %>/<%= UserId %>">Like
                                this
                                post</a>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
</body>

